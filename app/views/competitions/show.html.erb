<html>
    <head>
        
    </head>
    <body>
        <div class ="container">
            <div class="row">
                <div class="col-md-6 col-md-offset-3 text-center">
                    <h1><%= @competition.title %></h1>
                </div>
            </div>
        </div>
        
        <div class= "row">
            <div class= "col-md-4 col-md-offset-1 text-center">
                <div class="well">
                    <h3>Judges</h3>
                    <ul class="list-unstyled">
                        <%= @competition.judges.find_each do |j| %>
                            <li><%= j.name %></li>
                        <% end %>
                    </ul>
                </div>
            </div>
            <div class= "col-md-4 col-md-offset-1 text-center">
                <div class="well">
                    <h3>Teams</h3>
                    <ul class="list-unstyled">
                        <%= @competition.teams.find_each do |t| %>
                            <li><%= t.name %></li>
                        <% end %>
                    </ul>
                </div>
            </div>
        </div>
        
        <div class ="container">
                <div class="row">
                    <div class="col-md-4 col-md-offset-4 text-center well">
                        <h3><%= link_to "Submit a scoresheet", new_competition_scoresheet_path(@competition, @scoresheet) %></h3>
                        <h3><%= link_to "See Scoresheets", competition_scoresheets_path(@competition, @scoresheet) %></h3>
                        <h3><%= link_to "Back to competitions", competitions_path %></h3>
                    </div>
                </div>
            </div>
        </div>
        
    </body>
</html>