<!DOCTYPE html>
<html>
    <head>
        
    </head>
    <body>
        <div id="form-area">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-md-offset-3 text-cetner">
                        <h1>Create a new competition</h1>
                           <%= form_for(@competition) do |f| %>
                           Judges:
                            <%= f.fields_for :judges do |judge_form| %>
                                <div class="form-group">
                                   <%= judge_form.label :judge %>
                                   <%= judge_form.text_field :name, :Placeholder => "Judge" %>
                                </div>
                            <% end %>
                           
                           <%= link_to "Add more judges", "#", class: "btn btn-default" %>
                           
                           <div class="form-group">
                               <%= f.label :team %>
                               <%= f.text_field :team, :Placeholder => "Team" %>
                           </div>
                           <div class="form-group">
                               <%= f.label :start_date %>
                               <%= f.date_field(:start_date)%>
                           </div>
                           <% end %>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>