<!DOCTYPE html>
<html>
<head>
  <title>Workspace</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
  <link href='http://fonts.googleapis.com/css?family=Alegreya+Sans:400,100,700,100italic' rel='stylesheet' type='text/css'>
  <%= csrf_meta_tags %>
  <div id="navbar">
    <%= link_to 'Culinary Competition Scoring Sheets', root_path, id: 'header-msg' %>
    <% if current_user %>
      <ul id='navbar-items'> <!-- Need to make sure that this is inline with the header -->
        <li>Hello <%= current_user.first_name %>!</li>
        <%= link_to "Log Out", 'logout', method: 'delete', class: 'btn btn-navbar btn-primary' %>
      </ul>
    <% else %>
      <ul id='navbar-items'> <!-- Need to make sure that this is inline with the header -->
        <li><%= link_to "Signup", 'signup', class: 'btn btn-navbar btn-primary' %></li>
        <li><%= link_to "Log In", 'login', class: 'btn btn-navbar btn-primary' %></li>
      </ul>
    <% end %>
  </div>
</head>
<body>
<% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>
<%= yield %>

</body>
</html>
