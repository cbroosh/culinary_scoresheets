<!DOCTYPE html>
<html>
    <head>
        
    </head>
    <body>
        <div id="form-area">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-md-offset-3 text-cetner">
                        <h1>Log In</h1>
                           <%= form_for(:session, url: login_path) do |f| %>
                               <div class="form-group"><%= f.email_field :email, :placeholder => 'Email' %></div>
                               <div class="form-group"><%= f.password_field :password, :placeholder => 'Password' %></div>
                               <div class="form-group"><%= f.submit "Log In", class: 'btn btn-primary' %></div>
                            <% end %>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>